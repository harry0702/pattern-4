#include<stdio.h>
//#include<conio.h>
void main()
{
     int i,j,k,n;
     char a=65;
     //clrscr();
     printf("\n enter no. of line");
     scanf("%d",&n);
     for(i=1;i<=n;i++)
     {
        for(k=1;k<=i;k++)
        {
          printf(" ");
        }
          for(j=i;j<=n;j++)
          {
             printf("%c ",a);
          }
            a++;
            printf("\n");
     }
}
